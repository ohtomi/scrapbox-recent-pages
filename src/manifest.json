{
  "name": "Scrapbox Recent Pages",
  "description": "Checker for Scrapbox projects",
  "author": "Kenichi Ohtomi",
  "version": "0.1.0",
  "permissions": [
    "https://scrapbox.io/*/*",
    "contextMenus",
    "storage",
    "cookies"
  ],
  "background": {
    "scripts": [
      "settings.js",
      "fetcher.js",
      "main.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://scrapbox.io/*"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "option/option.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "manifest_version": 2
}
